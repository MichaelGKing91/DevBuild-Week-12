@model List<Employee>
@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>
There are @Model.Count employees in the @ViewBag.depart.name department.

@foreach (Employee emp in Model)
{
    <h2>@emp.firstname @emp.lastname</h2>
    <div>ID: @emp.id</div>
    <div>Phone: @emp.phone</div>
    <div>Email: @emp.email</div>
    <div>@emp.department</div>
    @if (emp.username == DAL.currentUser || DAL.currentUser == "admin")
    {
        <div><a href="/dep/deleteemployee?dept=@emp.department&empid=@emp.id" class="btn btn-danger">Delete</a></div>
        <br />
    }
}
<a href="/dep/addemployeeform/@ViewBag.depart.id" class="btn btn-primary">Add</a>