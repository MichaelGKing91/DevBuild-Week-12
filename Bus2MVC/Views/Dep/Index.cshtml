@model List<Department> 
@{
    ViewData["Title"] = "Index";
}
Welcome @DAL.currentUser!
<h1>Departments</h1>
<div style="font-weight:bold">Click on a department to view and change employees in that department</div>
<br/>
@foreach (Department dep in Model)
{
    <h3><a href="/dep/detail/@dep.id">@dep.name</a></h3>
    <div>ID: @dep.id</div>
    <div>Location: @dep.location</div>
}